<% if @current_user %>
<div class="list_header">
    <h2>your lists:</h2>
</div>
<div class="list">
  <ul id= "list_items">
    <li><%= render "list_form" %></li>
  <% @my_lists.each do | list | %>
    <li><%= list.name %>  <%= link_to '[remove]', list, class: "ajax-destroy", method: :delete,data: { confirm: "Are you sure you'd like to delete this list?  This action cannot be undone." } %>  <%= link_to "[view]", list_path(list) %></li>
    <% end %>
  </ul>
</div>
<%end%>
<div class="list_header">
  <h2>here's what's going on in the hive:</h2>
</div>
<div class="list">
  <ul id= "list_items">
    <% @others_lists.each do | list | %>
      <li><%=list.name%> by <%= list.user.username %></li>
    <% end %>
  </ul>
</div>
