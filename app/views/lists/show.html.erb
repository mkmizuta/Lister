<div class="list_header">
  <h2><%= @list.name  %></h2>
</div>
<div class="list">
  <ul id= "list_items">
    <% if @current_user.lists.include?(@list) %>
      <li><%= render "list_item_form" %></li>
    <% end %>
    <% if @list.list_items %> 
      <% @list.list_items.each do | li |%>
        <li id="list_item_<%= "#{li.id}" %>"><%= li.to_do %> 
          <% if @current_user.lists.include?(@list) %>
          <%= link_to 'Bzzz, I\'m done!', {controller: 'list_items', action: 'destroy', id: li.id }, remote: true %>
          <% end %>
        </li>
        <% end %>
      <% end %>
  </ul>
</div>
<div class="list_footer">
  <%= link_to '<< Back', lists_path %>
</div>
