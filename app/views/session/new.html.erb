<div class="signup_form_header">
<h2>Sign in Busy Bee... or <%= link_to "sign up!", :signup %></h2>
</div>
<div class="signup_form">
<%= form_tag url_for(:controller=>"session",:action=>"create") do %>

    <%= text_field_tag :username, params[:username], placeholder: "enter your username" %>
    <%= password_field_tag :password,nil, placeholder: "password" %>
    <div style="text-align:center; padding-bottom:20px;"><%= submit_tag("Sign in!") %></div>
<% end %>
</div>
